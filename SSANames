import java.io.*;    // All imports are here
import java.util.*;
import java.util.Arrays; //in next chapter, I believe this resolves our concerns with .split

public class Team3TP02{

   public static void main(String[] args){
   
      Scanner console = new Scanner(System.in);
      System.out.println("Hello, this program allows you to find the frequnecy of a name in a given year");
      System.out.println("Please enter the desired name");   
      String userName = console.next();               // I put the user input in variables, so we can use it as paramaters later
      System.out.println("Please enter the desired year");
      int userNumber = console.nextInt(); 
      
      Scanner yearInput = new Scanner(new File("YOB" + userNumber + ".txt")); //declares year to search
      ssnNames (yearInput, userName);
      
   public static void ssnNames(Scanner yearInput, String userName) {
   //splits list by commas, reads each part and return amount of name
   
      while (yearInput.hasNextLine()) {
         String ssnLine = yearInput.nextLine();
         String[] sss_list = ssnLine.split(",");
         String name = ssn_list[0];
         String sex = ssn_list[1];
         String amount = ssn_list[2];
         
        while (String name.equals(userName)){
            if (String sex.equals("M")) {
               System.out.println("There are" + amount + "males with this name.");
            } else if (!String sex.equals("F")){
               System.out.println("There are 0 males with this name.");
            }
            
            if (String sex.equals("F")) {
               System.out.println("There are" + amount + "females with this name.");
            } else if (!String sex.equals("M")) {
               System.out.println("There are 0 females with this name.");
            }
      }
   }
